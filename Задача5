#include <iostream>
#include <iomanip> // 

int main() {
    const double PI = 3.14; // 
    double R; // 

    // 
    std::cout << "Enter the radius (R): ";
    std::cin >> R;

    // 
    double area = PI * R * R;
    double circumference = 2 * PI * R;

    // 
    std::cout << std::fixed << std::setprecision(2);
    std::cout << "Area: " << area << std::endl;
    std::cout << "Circumference: " << circumference << std::endl;

    return 0;
}
