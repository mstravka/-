#include <iostream>

int main() {
    int a, b; // 

    // 
    std::cout << "Enter first number (a): ";
    std::cin >> a;
    std::cout << "Enter second number (b): ";
    std::cin >> b;

    // 
    std::cout << "Sum: " << (a + b) << std::endl;
    std::cout << "Difference: " << (a - b) << std::endl;
    std::cout << "Product: " << (a * b) << std::endl;

    return 0;
}
